# Developer data backbone defaults for docker-compose.yml services
# Copy to .env (or export selectively) to enable Timescale, Redis, and Kafka while
# running the AlphaTrade runtime locally.

# TimescaleDB
TIMESCALEDB_URL=postgresql+psycopg2://emp_user:emp_password@localhost:5432/emp_db
TIMESCALEDB_APP=emp_dev_runtime
TIMESCALEDB_STATEMENT_TIMEOUT_MS=15000
TIMESCALEDB_CONNECT_TIMEOUT=5
TIMESCALE_SYMBOLS=EURUSD,GBPUSD,USDJPY
TIMESCALE_ENABLE_INTRADAY=true
TIMESCALE_INTRADAY_LOOKBACK_DAYS=5
TIMESCALE_LOOKBACK_DAYS=90

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CLIENT_NAME=emp_dev_cache
REDIS_TTL_SECONDS=900

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9094
KAFKA_CLIENT_ID=emp-dev-runtime
KAFKA_INGEST_DEFAULT_TOPIC=telemetry.ingest
KAFKA_INGEST_CONSUMER_TOPICS=telemetry.ingest
KAFKA_INGEST_HEALTH_TOPIC=telemetry.ingest.health
KAFKA_INGEST_METRICS_TOPIC=telemetry.ingest.metrics
KAFKA_INGEST_QUALITY_TOPIC=telemetry.ingest.quality

# System configuration hints
DATA_BACKBONE_MODE=institutional
RUN_MODE=paper
EMP_ENVIRONMENT=demo
