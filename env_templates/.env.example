# Environment configuration for EMP Professional Predator
# Copy this file to `.env` in the project root and update values as needed.
# Runtime configuration
RUN_MODE=paper
CONFIRM_LIVE=false
EMP_KILL_SWITCH=/tmp/emp_pg.KILL
EMP_ENVIRONMENT=demo
CONNECTION_PROTOCOL=fix
EMP_TIER=tier_0

# Broker credentials (replace with real values for live trading)
ICMARKETS_ACCOUNT=your_account_id_here
ICMARKETS_PASSWORD=your_password_here

# Symbols to ingest (comma-separated) and database path for Tier-0 ingest
SYMBOLS=EURUSD,GBPUSD,USDJPY,XAUUSD
DB_PATH=data/market_data.db

# Risk management thresholds
# Maximum acceptable Value-at-Risk (VaR) as a fraction of account equity.
# Trades will be blocked if the portfolio VaR exceeds this percentage.
MAX_VAR_PCT=0.02
# Maximum acceptable Expected Shortfall (ES) as a fraction of account equity.
MAX_ES_PCT=0.03
