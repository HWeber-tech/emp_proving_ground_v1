# IC Markets cTrader API Configuration
# Copy this file to .env and fill in your actual credentials

# cTrader API Credentials
CTRADER_CLIENT_ID=your_client_id_here
CTRADER_CLIENT_SECRET=your_client_secret_here
CTRADER_REFRESH_TOKEN=your_refresh_token_here
CTRADER_ACCESS_TOKEN=your_access_token_here
CTRADER_ACCOUNT_ID=your_account_id_here
ICMARKETS_ACCOUNT=your_account_id_here
ICMARKETS_PASSWORD=your_password_here

# Host Configuration
CTRADER_DEMO_HOST=demo.ctraderapi.com
CTRADER_LIVE_HOST=live.ctraderapi.com
CTRADER_PORT=5035

# FIX Protocol Configuration (IC Markets cTrader FIX)
# Price Connection (Port 5211)
FIX_PRICE_SENDER_COMP_ID=your_price_sender_id
FIX_PRICE_USERNAME=your_price_username
FIX_PRICE_PASSWORD=your_price_password

# Trade Connection (Port 5212)
FIX_TRADE_SENDER_COMP_ID=your_trade_sender_id
FIX_TRADE_USERNAME=your_trade_username
FIX_TRADE_PASSWORD=your_trade_password

# Master Switch - Protocol Selection
# Options: "fix" (professional) or "openapi" (legacy)
CONNECTION_PROTOCOL=fix

# Trading Configuration
DEFAULT_SYMBOLS=EURUSD,GBPUSD,USDJPY
DEFAULT_LOT_SIZE=0.01
MAX_RISK_PER_TRADE=0.02
MAX_DRAWDOWN=0.05

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost/emp_trading
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/emp.log

# Development Mode
ENVIRONMENT=demo
DEBUG=True
